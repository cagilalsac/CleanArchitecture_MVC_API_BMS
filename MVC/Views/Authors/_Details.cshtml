@model ReadAuthorMvcResponse

<h4>Author</h4>
<hr />
<dl class="row">
    <dt class="col-2">
        Full Name
    </dt>
    <dd class="col-10">
        @Html.DisplayFor(model => model.FullName)
    </dd>
</dl>
<dl class="row">
    <dt class="col-2">
        @Html.DisplayNameFor(model => model.Books)
    </dt>
    <dd class="col-10">
        <i>@Html.DisplayFor(model => model.BooksCount)</i><hr />
        @Html.Raw(string.Join("<br />", Model.Books))
    </dd>
</dl>