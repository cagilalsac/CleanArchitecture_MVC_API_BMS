@model IEnumerable<ReadBookMvcResponse>
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Books";
}

<div class="container-fluid">
    <h1>@ViewData["Title"]</h1>
    @if (TempData["Message"] is not null)
    {
        <p class="bg-warning text-black">@TempData["Message"]</p>
    }
</div>

<div class="container-fluid">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <p class="bg-info text-black">@Model.Count() record(s) found.</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Number Of Pages
                </th>
                <th>
                    Publish Date
                </th>
                <th>
                    Book Type
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    Top Seller
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
	    @foreach (var item in Model) {
	        <tr>
		        <td>
			        @Html.DisplayFor(modelItem => item.Name)
		        </td>
		        <td>
			        @Html.DisplayFor(modelItem => item.Isbn)
		        </td>
		        <td>
			        @Html.DisplayFor(modelItem => item.NumberOfPages)
		        </td>
		        <td>
			        @Html.DisplayFor(modelItem => item.PublishDate)
		        </td>
		        <td>
			        @Html.DisplayFor(modelItem => item.BookType)
		        </td>
		        <td>
			        @Html.DisplayFor(modelItem => item.Price)
		        </td>
		        <td>
			        @Html.DisplayFor(modelItem => item.IsTopSeller)
		        </td>
		        <td>
			        @Html.DisplayFor(modelItem => item.Author.FullName)
		        </td>
		        <td class="text-end">
			        <a asp-action="Details" asp-route-id="@item.Id">Details</a>&nbsp;|&nbsp;
			        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>&nbsp;|&nbsp;
			        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
		        </td>
	        </tr>
	    }
        </tbody>
    </table>
</div>



