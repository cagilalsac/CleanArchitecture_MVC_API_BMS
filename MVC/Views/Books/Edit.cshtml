@model UpdateBookRequest
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="container">
    <h4>Book</h4>
    <hr />
    <div class="row">
        <div class="col-12">
            <form asp-action="Edit">
		        @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row mb-3">
                    <label asp-for="Name" class="col-2 col-form-label"></label>
				    <div class="col-6">
					    <input asp-for="Name" class="form-control" />
					    <span asp-validation-for="Name" class="text-danger"></span>
				    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Isbn" class="col-2 col-form-label"></label>
				    <div class="col-6">
					    <input asp-for="Isbn" class="form-control" />
					    <span asp-validation-for="Isbn" class="text-danger"></span>
				    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="NumberOfPages" class="col-2 col-form-label"></label>
				    <div class="col-6">
					    <input asp-for="NumberOfPages" class="form-control" />
					    <span asp-validation-for="NumberOfPages" class="text-danger"></span>
				    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="PublishDate" class="col-2 col-form-label"></label>
				    <div class="col-6">
					    <input asp-for="PublishDate" class="form-control" />
					    <span asp-validation-for="PublishDate" class="text-danger"></span>
				    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="BookType" class="col-2 col-form-label"></label>
				    <div class="col-6">
					    <input asp-for="BookType" class="form-control" />
					    <span asp-validation-for="BookType" class="text-danger"></span>
				    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Price" class="col-2 col-form-label"></label>
				    <div class="col-6">
					    <input asp-for="Price" class="form-control" />
					    <span asp-validation-for="Price" class="text-danger"></span>
				    </div>
                </div>
                <div class="row mb-3">
				    <label asp-for="IsTopSeller" class="col-2 col-form-label"></label>
				    <div class="col-6 pt-2">
					    <input class="form-check-input" asp-for="IsTopSeller" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="AuthorId" class="col-2 col-form-label"></label>
				    <div class="col-6">
					    <select asp-for="AuthorId" class="form-select select2" asp-items="ViewBag.AuthorId">
						    <option value="">-- Select --</option>
					    </select>
					    <span asp-validation-for="AuthorId" class="text-danger"></span>
				    </div>
                </div>
                <div class="row mb-3">
				    <div class="offset-2 col-6">
					    <input type="submit" value="Save" class="btn btn-primary" />
					    &nbsp;&nbsp;
                        <button type="reset" class="btn btn-outline-primary">Reset</button>
					    &nbsp;&nbsp;
					    <a asp-action="Index">Back to List</a>
				    </div>
                </div>
            </form>
        </div>
    </div>
</div>




